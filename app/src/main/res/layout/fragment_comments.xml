<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.instagramclient.sushmanayak.instagramclient.CommentsFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addcommentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <EditText
            android:id="@+id/tvAddComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addComment"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    </android.support.design.widget.TextInputLayout>

    <ListView
        android:id="@+id/lvComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/addcommentContainer"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
